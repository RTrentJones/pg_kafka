#!/bin/bash
# Pre-commit hook for pg_kafka
# Ensures code quality by running fmt and clippy before accepting commits
#
# To install: cp hooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit
# Or run: hooks/install.sh

set -e

echo "Running pre-commit checks..."

# Check if we're in the workspace directory
if [ ! -f "Cargo.toml" ]; then
    echo "Error: Cargo.toml not found. Run git commit from repository root."
    exit 1
fi

# Run cargo fmt check
echo "ğŸ” Checking code formatting with cargo fmt..."
if ! cargo fmt --check 2>&1; then
    echo "âŒ Code formatting check failed!"
    echo "Run 'cargo fmt' to fix formatting issues."
    exit 1
fi
echo "âœ… Formatting check passed"

# Run clippy with strict warnings
echo "ğŸ” Running clippy with strict warnings..."
if ! cargo clippy --features pg14 -- -D warnings 2>&1; then
    echo "âŒ Clippy check failed!"
    echo "Fix all clippy warnings before committing."
    exit 1
fi
echo "âœ… Clippy check passed"

echo "âœ… All pre-commit checks passed!"
exit 0
